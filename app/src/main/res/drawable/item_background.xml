<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_selected="true">
        <shape android:shape="rectangle">
            <solid android:color="@color/item_selected_background" />
            <stroke
                android:width="2dp"
                android:color="@color/item_selected_border" />
            <corners android:radius="8dp" />
        </shape>
    </item>

    <item>
        <shape android:shape="rectangle">
            <solid android:color="@color/item_background" />
            <stroke
                android:width="2dp"
                android:color="@color/item_border" />
            <corners android:radius="8dp" />
        </shape>
    </item>
</selector>
