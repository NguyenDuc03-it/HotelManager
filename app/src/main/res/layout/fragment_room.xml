<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".fragment.Room_fragment">

    <!-- Thanh công cụ và Tabs -->
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >

            <com.google.android.material.appbar.AppBarLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <!-- Thanh tiêu đề và toolbar -->
                <androidx.appcompat.widget.Toolbar
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="?attr/colorPrimary"
                    app:popupTheme="@style/ThemeOverlay.AppCompat.Light">

                    <!-- Tiêu đề chính giữa -->
                    <TextView
                        android:id="@+id/title"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:text="Sơ Đồ Phòng"
                        android:textColor="@android:color/white"
                        android:textSize="18sp" />
                </androidx.appcompat.widget.Toolbar>

                <!-- Tab layout để chuyển đổi giữa Sơ Đồ Phòng và Loại Phòng -->
                <com.google.android.material.tabs.TabLayout
                    android:id="@+id/tabLayout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:tabMode="fixed">

                    <com.google.android.material.tabs.TabItem
                        android:id="@+id/tab_room_layout"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Sơ Đồ Phòng" />

                    <com.google.android.material.tabs.TabItem
                        android:id="@+id/tab_room_type"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Loại Phòng" />
                </com.google.android.material.tabs.TabLayout>

                <!-- Nút chọn ngày (Date picker) -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:orientation="horizontal"
                    android:padding="10dp">

                    <!-- Chọn ngày từ -->
                    <TextView
                        android:id="@+id/tv_date_from"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:drawableLeft="@android:drawable/ic_menu_my_calendar"
                        android:padding="10dp"
                        android:text="Chọn ngày vào"
                        android:textColor="@android:color/black"
                        android:textSize="16sp" />

                    <!-- Khoảng cách giữa 2 nút -->
                    <View
                        android:layout_width="20dp"
                        android:layout_height="wrap_content" />

                    <!-- Chọn ngày đến -->
                    <TextView
                        android:id="@+id/tv_date_to"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:drawableLeft="@android:drawable/ic_menu_my_calendar"
                        android:padding="10dp"
                        android:text="Chọn ngày ra"
                        android:textColor="@android:color/black"
                        android:textSize="16sp" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <androidx.recyclerview.widget.RecyclerView
                        android:id="@+id/recyclerViewRooms"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:padding="16dp"
                        app:layoutManager="androidx.recyclerview.widget.GridLayoutManager" />
                </LinearLayout>

            </com.google.android.material.appbar.AppBarLayout>
        </LinearLayout>
    </ScrollView>

    <!-- Grid hiển thị phòng khách sạn -->

    <!-- Floating Action Button (Thêm phòng) -->


    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/fab_add"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="end|bottom"
        android:layout_marginEnd="16dp"
        android:layout_marginBottom="80dp"
        android:src="@drawable/ic_add" />



</androidx.coordinatorlayout.widget.CoordinatorLayout>
